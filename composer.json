{
    "name": "pakacuda/cakephp-fixture-factories",
    "description": "An alternative to the CakePHP test fixtures approach",
    "authors": [
        {
            "name": "Nicolas Masson",
            "email": "nicolas@b-projects.tech"
        },
        {
            "name": "Juan Pablo RamÃ¬rez",
            "email": "pabloelcolombiano@gmail.com"
        }
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "^4.0",
        "cakephp/migrations": "^3.0",
        "fzaninotto/faker": "^1.9@dev"
    },
    "require-dev": {
        "cakephp/bake": "^2.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "CakephpFixtureFactories\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CakephpFixtureFactories\\Test\\": "tests",
            "TestApp\\": "tests/TestApp/src",
            "TestApp\\Test\\": "tests/TestApp/tests",
            "TestPlugin\\": "tests/TestApp/plugins/TestPlugin/src",
            "TestPlugin\\Test\\": "tests/TestApp/plugins/TestPlugin/tests"
        }
    },
    "scripts": {
        "run-tests-sqlite": "./vendor/bin/phpunit",
        "run-tests-mysql": "./vendor/bin/phpunit --configuration phpunit_mysql.xml.dist",
        "run-tests-postgres": "./vendor/bin/phpunit --configuration phpunit_postgres.xml.dist"
    },
    "config": {
        "sort-packages": true
    }
}
